@model List<MvcBlog.Models.TblBlog>

@{
    ViewBag.Title = "BlogWithCategory";
    Layout = "~/Views/Layout/_BlogLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<body>
    <!-- Page Content -->
    <!-- Banner Starts Here -->
    <div class="main-banner header-text">
        <div class="container-fluid">
            <div class="owl-banner owl-carousel">
                @foreach (var item in Model)
                {
                    <div class="item">
                        <img src="@item.BlogImage" alt="">
                        <div class="item-content">
                            <div class="main-content">
                                <div class="meta-category">
                                    <span>@item.BlogTitle</span>
                                </div>
                                <a href="post-details.html"><h4>@item.BlogContent.Substring(0, 40) ...</h4></a>
                                <ul class="post-info">
                                    <li><a href="#">@(((DateTime)item.BlogDate).ToString("dd-MMM-yyyy"))</a></li>
                                    <li><a href="#">@item.TblCategory.CategoryName</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Banner Ends Here -->

    <section class="blog-posts">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="all-blog-posts">
                        <div class="row">
                            <div class="col-lg-12">
                                @foreach (var item in Model)
                                {
                                    <div class="blog-post">
                                        <div class="blog-thumb">
                                            <img src="@item.BlogImage" alt="">
                                        </div>
                                        <div class="down-content">
                                            <a href=""><span>@item.BlogTitle</span></a>
                                            <p>@item.BlogContent.Substring(0, 250) ...</p>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="col-lg-12">
                                <div class="main-button">
                                    <a href="blog.html">HEPSİNİ GÖR</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="sidebar">
                        <div class="row">
                            <div class="col-lg-12">

                                @Html.Action("PartialRecentPost", "Default")

                            </div>
                            <div class="col-lg-12">

                                @Html.Action("PartialCategories", "Default")

                            </div>
                            <div class="col-lg-12">

                                @Html.Action("PartialRecentComment", "Default")

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>