@model List<MvcBlog.Models.TblAbout>

@{
    ViewBag.Title = "About";
    Layout = "~/Views/Layout/_BlogLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body>
    <!-- Page Content -->
    <!-- Banner Starts Here -->
    <div class="heading-page header-text">
        <section class="page-heading">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-content">
                            <h4>HAKKIMIZDA</h4>
                            <h2>DAHA FAZLA BİLGİ!</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Banner Ends Here -->


    <section class="about-us">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    @foreach (var item in Model)
                    {
                        <img src="@item.ImageUrl" alt="">
                        <p>@item.Description</p>
                        <p>@item.Description</p>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>